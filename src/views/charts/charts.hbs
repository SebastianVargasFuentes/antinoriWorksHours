// Load google charts
google.charts.load('current', {'packages':['corechart']});
google.charts.setOnLoadCallback(drawChart);

// Draw the chart and set the chart values
function drawChart() {
  
  var data = google.visualization.arrayToDataTable([ ['trabajador','hours per day'],{{#each chart_value}} ['{{rut_trabajador}}',{{suma_horas}}],{{/each}} ]);

  var data2 = google.visualization.arrayToDataTable([ ['sector','hours per day'],{{#each chart_value2}} ['{{sector_trabajo}}',{{suma_horas}}],{{/each}} ]);

