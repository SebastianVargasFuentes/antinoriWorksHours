<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/sectors/edit/{{sector.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="sector_name" value="{{sector.sector_name}}" placeholder="Sector Title" autofocus required>
                            <input type="hidden" name="name_for_edit" value="{{sector.sector_name}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-success btn-block">Editar Sector</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>